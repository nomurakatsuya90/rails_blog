<h1>ブログ一覧</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>内容</th>
  </tr>
<% @blog_contents.each do |blog_content| %>　　
  <tr>
    <td><%= blog_content.content %></td>
    <td><%= link_to "ブログを編集する", edit_blog_path(blog_content.id), data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to 'ブログを削除する', blog_path(blog_content.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
<%= link_to '新しくブログを投稿する', new_blog_path %>
